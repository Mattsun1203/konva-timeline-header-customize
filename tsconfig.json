{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2016"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/**/*.test.*", "src/**/*.stories.*"]
}
